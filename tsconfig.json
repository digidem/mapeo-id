{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowJs": true,
    "checkJs": true,
    "declarationDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  },
  "include": ["index.js", "vendor/types/**/*"],
  "exclude": ["node_modules"]
}
